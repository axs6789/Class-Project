<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>

<%= form_for(@task) do |f| %>
	<div class="field">
		<p>name</p>
		<%= f.text_field :name%>
	</div>
	<div class="field">
		<p>deadline</p>
		<%= f.text_field :deadline %>
	</div>
	<div class="field">
		<p>category</p>
		<%= f.text_field :category %>
	</div>
	<div class="field">
		<p>user</p>
		<%= f.collection_select :user_id, User.all, :id, :username %>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>